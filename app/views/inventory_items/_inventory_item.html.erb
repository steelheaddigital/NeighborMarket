<div class="container-fluid">
	<div class="well-fluid row">
	  <div class="col-md-3">
	    <%if inventory_item.photo?%>
	      <%= image_tag inventory_item.photo.url(:medium), class: "img-responsive" %>
	    <%else%>
	      No Image Available
	    <%end%>
	  </div>
	  <div class="col-md-9">
	    <h3>
	      <%= item_name(inventory_item) %>
	    </h3>
	    <p><%= inventory_item.description %></p>
	    <p>Quantity Available:  <%= quantity(inventory_item)%></p>
	    <p>Price:  <%= number_to_currency(inventory_item.price).to_s + " " + price_unit_label(inventory_item) %></p>
	    <p>Sold By:  <%= link_to(inventory_item.user.username, user_path(inventory_item.user.id)) %></p>
		<% if inventory_item.quantity_available > 0 %>
	        <%= form_tag(cart_items_path(:inventory_item_id => inventory_item.id), :class => "addToCartButton") do %>
	        <p>Quantity: <input id="quantity" name="quantity" class="input-small" value="1"></input><span> <%= item_quantity_label(inventory_item, 2) %></span></p>
	        <p><%= submit_tag("Add To Cart", :class => "btn btn-primary") %></p>
	        <% end %>
		<% end %>
	  </div>
	</div>
</div>