<div class="container-fluid">
  <h2>Your Cart</h2>
    <%@cart.cart_items.each do |item|%>
    <div class="well row-fluid" style="padding-right:0; padding-left: 0">
      <div class="span2">
        <p style="padding-left: 19px;">No Image Available</p>
      </div>
      <div class="span6">
        <table class="table">
        <thead>  
          <tr>
            <th></th>
            <th>Price</th>
            <th>Quanity</th>
          </tr>
        </thead>
          <tbody>
            <tr>
              <td><%= item.inventory_item.name %></td>
              <td><%= number_to_currency(item.inventory_item.price)%> </td>
              <td><%= item.quantity %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <%end%>
    <div class="row-fluid">
      <div class ="span5"></div>
      <div class="span1">
        <span class="totalLabel" >Total:</span>
      </div>     
      <div class="span1">
        <span class="totalCell"><%= number_to_currency @cart.total_price %></span>
      </div>
    </div>
</div>
