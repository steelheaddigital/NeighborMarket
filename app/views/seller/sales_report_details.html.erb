<h4>Sales Report: <%= "#{format_short_date(@begin_date + 1.day)} to #{format_short_date(@end_date + 1.day)}" %></h4>
<div class="table-responsive">
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
        <th>Item Name</th>
		<th>Price Per Unit</th>
        <th>Total Units Sold</th>
		<th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
		<td><%= number_to_currency(item.price).to_s + " " + price_unit_label(item) %></td>
        <td><%= item.attributes["total_quantity"] %></td>
		<td><%= number_to_currency(item.attributes["total_price"]) %></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td style="font-weight:bold;">Total:</td>
	  <td><%= @total_quantity %></td>
      <td><%= number_to_currency @total_price %></td>
    </tr>
  </tbody>
</table>
</div>