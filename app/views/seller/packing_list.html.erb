<div class="container-fluid">
	<div class="row-fluid">
		<%= form_tag previous_packing_list_seller_index_path, :class => 'form-inline sellerListDatePicker' do %>
			<%= select(:selected_previous_order_cycle, :id, @previous_order_cycles.collect{|o| [format_short_date(o.end_date), o.id]}, {:include_blank => true}, {:class => 'input-medium'}) %>
			<%= submit_tag 'Submit', :class => 'btn' %>
			<span>Choose an order cycle end date to load a previous packing list</span>
		<% end %>
	</div>
  <div class="row-fluid" style="margin-bottom: 15px;">
    <%= button_to "Printable Packing List (PDF)", previous_packing_list_seller_index_path(:format => 'pdf', :selected_previous_order_cycle => { :id =>  @selected_previous_order_cycle}), :class => 'btn' %>
  </div>
  <%@orders.each do |order|%>
  <div class="well row-fluid">
    <%= form_for order, :url => seller_update_order_path(order), :html => { :id => "SellerUpdateOrderForm" } do |f| %>
      <p><span style ="font-weight: bold">Buyer Name: </span> <%= order.user.first_name + " " + order.user.last_name %></p>
      <p><span style ="font-weight: bold">Buyer Address: </span> <%= order.user.address + ", " + order.user.city + ", " + order.user.state + " " + order.user.zip %></p>
      <table class="table" >
        <thead>  
          <tr>
            <th>Item ID</th>
            <th>Item Name</th>
            <th>Quantity</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= f.fields_for :cart_items do |item| %>
          <tr>
            <% if item.object.inventory_item.user_id == current_user.id %>      
              <td><%= item.object.inventory_item.id %></td>
              <td><%= item_name(item.object.inventory_item) %></td>
              <td>
				<% if(@can_edit) %>
					<%= item.text_field :quantity, :class => "input-small" %>
				<% else %>
					<%= item.object.quantity %>
			  	<% end %>
				<span> <%= item_quantity_label(item.object.inventory_item, item.object.quantity) %></span>
			  </td>
              <td>
				<% if(@can_edit) %>
					<%= link_to "Delete Item", seller_remove_item_from_order_path(item.object), :class => 'btn btn-danger sellerDeleteOrderItem'%>
				<% end %>
			  </td>
            <% end %>
          </tr>
          <%end%>
        </tbody>
      </table>
		<% if(@can_edit) %>
			<%= submit_tag "Update Order", :class => 'btn btn-primary sellerUpdateOrderSubmit' %>
	      	<%= submit_tag "Delete All Items", :confirm => "Are you sure you want to delete all items in this order?", :class => 'btn btn-danger sellerUpdateOrderSubmit' %>
	  	<% end %>
    <%end%>
  </div>
  <%end%>
</div>
