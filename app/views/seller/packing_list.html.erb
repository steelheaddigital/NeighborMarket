<div class="container-fluid">
	<div class="row-fluid">
		<%= form_tag packing_list_seller_index_path, :method => 'GET', :class => 'form-inline' do %>
			<%= select(:selected_previous_order_cycle, :id, @previous_order_cycles.collect{|o| [format_short_date(o.end_date), o.id]}, {:include_blank => true}, {:class => 'input-medium'}) %>
			<%= submit_tag 'Submit', :class => 'btn' %>
			<span>Choose an order cycle end date to load a previous packing list</span>
		<% end %>
	</div>
  <div class="row-fluid" style="margin-bottom: 15px;">
    <%= link_to "Printable Packing List (PDF)", packing_list_seller_index_path(:format => 'pdf', :selected_previous_order_cycle => { :id =>  @selected_previous_order_cycle}), :class => 'btn' %>
  </div>
  <%@orders.each do |order|%>
  <div class="well-fluid row-fluid">
      <p><span style ="font-weight: bold">Buyer Name: </span> <%= order.user.username %></p>
      <p><span style ="font-weight: bold">Buyer Address: </span> <%= order.user.address + ", " + order.user.city + ", " + order.user.state + " " + order.user.zip %></p>
      <table class="table" >
        <thead>  
          <tr>
            <th>Item ID</th>
            <th>Item Name</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          <% order.cart_items.each do |item| %>
          <tr>
            <% if item.inventory_item.user_id == current_user.id %>      
              <td><%= item.inventory_item.id %></td>
              <td><%= item_name(item.inventory_item) %></td>
              <td>
				<%= item.quantity %>
				<span> <%= item_quantity_label(item.inventory_item, item.quantity) %></span>
			  </td>
            <% end %>
          </tr>
          <%end%>
        </tbody>
      </table>
  </div>
  <%end%>
</div>
