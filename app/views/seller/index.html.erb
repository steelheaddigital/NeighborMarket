<div id="PastInventoryContainer" class="row-fluid collapse">
	<div class="container-fluid">
		<div class="row-fluid">
			<%= form_tag add_past_inventory_seller_index_path, :id => 'AddPastInventoryItems' do %>
			  <div id="PreviousSellerInventoryRow" class="row-fluid">
				  <table class="table table-bordered table-condensed">
				    <thead>
				      <tr>
						  <th><input type="checkbox" id="SelectAllInventoryItems" title="Select All"/></th>
						  <th>Name</th>
				          <th>Top Level Category</th>
				          <th>Second Level Category</th>
				          <th>Price</th>
				          <th>Quantity</th>
						  <th></th>
				      </tr>
				    </thead>
				    <tbody>
				      <%@all_inventory.each_with_index do |item, index|%>
				        <tr>
						  <td><input type="checkbox" name=<%= "item[#{index}]"%> value=<%= item.id %> /></td>
						  <td><%= item_name(item)%></td>
				          <td><%= item.top_level_category.name%></td>
				          <td><%= item.second_level_category.name%></td>
				          <td><%= number_to_currency(item.price).to_s + " " + price_unit_label(item) %></td>
				          <td><%= item.quantity_available%></td>
						  <td><%= link_to "Delete", item, :data => {:confirm => "Item will be permanently deleted from your inventory. Are you sure you want to continue?"}, :method => "delete", :class => "btn btn-danger"%></td>
				        </tr>
				      <%end%>
				    </tbody>
				  </table>
				</div>
				<div class="row-fluid" style="margin-top: 15px;">
					<%= submit_tag("Add Selected Items", :class => 'btn btn-primary') %>
				</div>
			<% end %>
		</div>
	</div>
</div>
<div class="row-fluid">
	<div class="span5"></div>
	<div>
		<a href="#PastInventoryContainer" data-toggle="collapse" class="btn" style="border-radius: 0 0 4px 4px;">Add Past Inventory Items</a>
	</div>
</div>
<div class="row-fluid">
  <%= button_to "New Inventory Item", { :action => "new", :controller => "inventory_items"}, {:form => {:id => "NewInventoryItemButton"}, :class => "btn", :method => "get"} %>
  <table class="table table-bordered table-condensed">
    <thead>
      <tr>
		  <th>Name</th>
          <th>Top Level Category</th>
          <th>Second Level Category</th>
          <th>Price</th>
          <th>Quantity</th>
          <th></th>
          <th></th>
      </tr>
    </thead>
    <tbody>
      <%@current_inventory.each do |item|%>
        <tr>
		  <td><%= item_name(item)%></td>
          <td><%= item.top_level_category.name%></td>
          <td><%= item.second_level_category.name%></td>
          <td><%= number_to_currency(item.price).to_s + " " + price_unit_label(item) %></td>
          <td><%= item.quantity_available%></td>
          <td><%= button_to "Edit", { :action => "edit", :controller => "inventory_items", :id => item.id}, {:form => {:class => "editInventoryItemButton"}, :method => "get", :class => "btn", :style => "width:95%;"} %></td>
          <td><%= button_to "Delete", { :action => "delete_from_current_inventory", :controller => "inventory_items", :id => item.id}, {:form => {:class => "deleteInventoryItemButton"}, :data => {:confirm => "Are you sure you want to delete this item from your current inventory?"}, :class => "btn btn-danger", :style => "width:95%;"} %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
  <%= will_paginate @current_inventory %>
</div>
