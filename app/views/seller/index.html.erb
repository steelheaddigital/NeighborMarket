<div class="container-fluid">
  <p class="notice"><%= flash[:notice] %></p>
  <%= flash[:alert] %>
</div>
<div id="SellerContent" class="container-fluid">
  
</div>

<script type="text/javascript">
  
  function LoadNewInventory(){
    var url = '<%= new_inventory_path %>'
    $('#SellerContent').load(url);
  };
  
  function LoadCurrentInventory(){
    var url = '<%= seller_current_inventory_path %>'
    var data = {user_id: '<%= current_user.id %>'}
    $('#SellerContent').load(url, data);
  };
  
</script>