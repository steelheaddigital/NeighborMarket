<table class="table table-bordered table-condensed">
  <thead>
    <tr>
        <th>Top Level Category</th>
        <th>Second Level Category</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <%@current_inventory.each do |inventory|%>
      <tr>
        <td><%= inventory.top_level_category.description%></td>
        <td><%= inventory.second_level_category.description%></td>
        <td><%= inventory.name%></td>
        <td><%= number_to_currency(inventory.price).to_s + " per " + inventory.price_unit%></td>
        <td><%= inventory.quantity_available%> </td>
        <td><%= link_to_function "Edit", "LoadInventoryDetail('#{edit_inventory_path(inventory.id)}')"%></td>
        <td><%= link_to_function "Delete", "DeleteInventoryItem('#{inventory_path(inventory.id)}')"%></td>
      </tr>
    <%end%>
  </tbody>
</table>

