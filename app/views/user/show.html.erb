<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 well">
      <%if @user.photo?%>
        <p>
          <%= image_tag @user.photo.url(:medium) %>
        </p>
      <%end%>
      <p>
        <b>Name:</b>
        <%= @user.username %>
      </p>
      <p>
        <b>About Me:</b>
        <%= @user.aboutme %>
      </p>
    </div>
    <div class="col-md-6 well">
      <p><h2>Contact</h2></p>
      <%= form_for @message, :url => contact_user_path, :method => "POST" do |f|%>
        <%= f.error_messages %>
        <div>
          <%= f.label "Your Email" %>
          <%= f.text_field :email, {:class => 'input-xlarge'} %>
        </div>

        <div>
          <%= f.label "Subject" %>
          <%= f.text_field :subject, {:class => 'input-xlarge'} %>
        </div>

        <div>
          <%= f.label "Message" %>
          <%= f.text_area :body, {:class => 'input-xlarge', :rows => 10 }%>
        </div>

        <div>
          <%= f.submit "Send", {:class => 'btn btn-default'} %>
        </div>
      <% end %>
    </div>
  </div>
</div>

