<div class="container-fluid">
	<%@sellers.each_slice(4) do |slice|%>
		<div class="row thumbnailRow">
			<%slice.each do |user|%>
				<div class="col-md-3 col-sm-3">
				    <div class="thumbnail">
				    	<div>
				        	<h3 style="text-align: center"><%=link_to(user.username, user_path(user))%></h3>
				      	</div>
				      	<a href="<%=user_path(user)%>"><%= image_tag user.photo.url(:medium), { alt: user.username, style: "height: 200px; width: auto;"} %></a>
				      	<h4><%= user.categories.to_a.join(', ') %></h4>
				    </div>
				</div>
			<%end%>
		</div>
	<%end%>
</div>

