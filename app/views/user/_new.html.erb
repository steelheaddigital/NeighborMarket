<%= form_for @user, :url => { :action => "create", :controller => "user" }, :html => { :id => 'NewUserForm', :class => 'well' } do |f| %>
	<div>
		<% @user.errors.full_messages.each do |msg| %>
	      <p><%= msg %></p>
	    <% end %>
	</div>
    <div>
		<div class="form-group">
			<label>Email</label>
			<div class="row">
				<div class="col-md-4">
	      			<%= f.text_field :email, class: "form-control" %>
				</div>
			</div>
		</div>
	  	<div class="checkbox">
		  	<label>
		  		<input type="checkbox" name="manager"> Manager?
			</label>
		</div>
    </div>
	<div style="margin-top: 10px;">
	  <%= f.submit("Create User", :class => 'btn btn-default') %>
	</div>
<% end %>