<h2>Become Seller</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <p class="notice"><%= flash[:notice] %></p>
  <%= flash[:alert] %>
  <%= devise_error_messages! %>
  
  <p class="notice">Please add payment instructions to your profile</p>
  
  <div><%= f.label "Current Password (we need your current password to confirm your changes)"%>
  <%= f.password_field :current_password %></div>
  
  <div>
    <%= f.label "Phone*" %>
    <%= f.telephone_field :phone %>
  </div>  
    
  <div><%= f.label "Payment Instructions*" %>
  <%= f.text_area :payment_instructions, :rows => 10 %></div>

  <%= f.hidden_field :become_seller, :value => true %>

  <div><%= f.submit "Update", :class => 'btn'%></div>
<% end %>