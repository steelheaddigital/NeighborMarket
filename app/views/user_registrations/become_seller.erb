<h2>Become Seller</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <p class="notice"><%= flash[:notice] %></p>
  <%= flash[:alert] %>
  <%= devise_error_messages! %>
  
  <p class="notice">Please add payment instructions to your profile</p>
  
  <div><%= f.label "Current Password (we need your current password to confirm your changes)"%>
  <%= f.password_field :current_password %></div>
  
  <div>
    <%= f.label "Phone*" %>
    <%= f.telephone_field :phone %>
  </div>  
    
  <%#= f.fields_for :roles do |rf| %>
    <%#= rf.fields_for :seller do |s|  %>
      <%#= s.object.id %>
      <%#= render :partial => "seller_fields", :locals => { :f => s } %>
    <%# end %>
  <%# end %>
  
  <%= f.fields_for resource.roles do |rf| %>
  <%=  debug rf.object %>
      <%= rf.fields_for :seller do |s|  %>
        <%=  debug s.object %>
        <%= render :partial => "seller_fields", :locals => { :f => s } %>
      <% end %>
  <% end %>

  <%= hidden_field_tag "become_seller", "true" %>

  <div><%= f.submit "Update" %></div>
<% end %>