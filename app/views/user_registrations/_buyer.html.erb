<div class="span3"></div>
<div class="span6 well">
	<h2>Sign Up</h2>
	<%= devise_error_messages! %>
	<div class="row-fluid">
	  <div>
	    <div><%= f.label "User Name* (for public display; make it recognizable to your neighbors)" %>
	    <%= f.text_field :username %></div>

	    <div><%= f.label "Email*" %>
	    <%= f.email_field :email %></div>

	    <div><%= f.label "Password*" %>
	    <%= f.password_field :password %></div>

	    <div><%= f.label "Password Confirmation*" %>
	    <%= f.password_field :password_confirmation %></div>
	
		<%= f.hidden_field :user_type, :value => "buyer" %>
	  </div>
	</div>
	<div class="row-fluid" style="margin-top: 19px;">
	  <div>
	    <%= f.submit "Sign up", {:class => "btn btn-primary", :style => "width: 150px; height: 35px;"}%>
	  </div>
	</div>
</div>