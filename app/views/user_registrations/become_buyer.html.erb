<h2>Become Buyer</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <p class="notice"><%= flash[:notice] %></p>
  <%= flash[:alert] %>
  <%= devise_error_messages! %>
  
  <p style="font-weight:bold;">Please add delivery instructions to your profile</p>
  
  <div><%= f.label "Current Password (we need your current password to confirm your changes)"%>
  <%= f.password_field :current_password %></div>
  
  <%= render :partial => "buyer_fields", :locals => { :f => f } %>

  <%= f.hidden_field :become_buyer, :value => true %>

  <div><%= f.submit "Update", :class => 'btn'%></div>
<% end %>