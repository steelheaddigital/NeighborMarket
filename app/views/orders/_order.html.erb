<div class="well row-fluid" style="padding-right:0; padding-left: 0">
  <div class="span12" style="padding-left: 15px; padding-right: 15px;">
    <table class="table" >
    <thead>  
      <tr>
        <th></th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Seller</th>
        <th>Payment Instructions</th>
      </tr>
    </thead>
      <tbody>
        <%@order.cart_items.sort_by{|item| [item.inventory_item.user.last_name, item.inventory_item.user.first_name]}.each do |item|%>
        <tr>
          <td><%= item_name(item.inventory_item) %></td>
          <td><%= number_to_currency(item.inventory_item.price)%> </td>
          <td><%= item.quantity %><span> <%= item_quantity_label(item.inventory_item, item.quantity) %></span></td>
          <td><%= item.inventory_item.user.first_name + " " + item.inventory_item.user.last_name %>
          <td><%= item.inventory_item.user.payment_instructions %>
        </tr>
        <%end%>
        <tr>
          <td style="font-weight:bold;">Total:</td>
          <td><%= number_to_currency @order.total_price %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>