<div class="row-fluid"
  <div class="span6">
    <%= form_for(@inventory, :html => { :class => 'well span5' }) do |f| %>
      <div>
        <%= f.label "Top Level Category"   %>
        <%= f.collection_select(:top_level_taxonomy, @top_level_taxonomies, :id, :name) %>
      </div>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :price %>
        <%= f.text_field :price %>
      </div>
      <div>
        <%= f.label :quantity_available %>
        <%= f.text_field :quantity_available %>
      </div>
      <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>

      <%= f.hidden_field :user_id, :value => @user_id %>

      <%= f.submit("Submit", :class => 'btn') %>
    <%  end %>
  </div>
</div>