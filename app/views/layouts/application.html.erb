<!DOCTYPE html>
<html>
<head>
  <title>Neighbor Market</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Neighbor Market</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><%= link_to "Home", root_path %></li>
              <% if user_signed_in? && current_user.manager?%>
                  <li><%= link_to('Manage', management_index_path) %></li>
              <% end %>
              <% if user_signed_in? && current_user.approved_seller? %>
                  <li><%= link_to('Sell', seller_index_path) %></li>
              <% end %>   
            </ul>
            <ul class="pull-right nav">
              <% if user_signed_in? %>
                <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>        
              <% else %>
                <li><%= link_to('Login', new_user_session_path)  %></li>  
              <% end %>
              <% if user_signed_in? %>
                <li><%= link_to('Edit registration', edit_user_registration_url) %></li>
                <% if current_user.buyer? && !current_user.seller?%>
                  <li><%= link_to('Become a seller', become_seller_url) %></li>
                <% end %>
                <% if current_user.seller? && !current_user.buyer?%>
                  <li><%= link_to('Become a buyer', become_buyer_url) %></li>
                <% end %>
              <% else %>
                <li><%= link_to('Sign up as a buyer', buyer_sign_up_url) %></li>
                <li><%= link_to('Sign up as a seller', seller_sign_up_url) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
  </div>
  <div class="container-fluid">
    <header class="subhead">
      <div class="subnav subnav-fixed" style="min-width:620px;">
        <ul class ="nav nav-pills">
          <li class="dropdown" id="MainCategoriesMenu">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            Browse Categories
            <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% @TopLevelCategories = get_top_level_categories %>
              <% @TopLevelCategories.each do |category| %>
                <li class="dropdown offset-right"><a href="#"><%= category.name %></a>
                  <ul class="dropdown-menu">
                    <% category.second_level_categories.each do |category|%>
                    <li>
                        <a href="<%= inventory_items_browse_path(:second_level_category_id => category.id) %>" class="secondLevelBrowseMenu"><%= category.name %> </a>
                    </li>
                    <% end %>
                  </ul>
                </li>
              <%  end %>
            </ul>
          </li>
          <li>
            <form id="MainSearchForm" class="form-inline" action="<%= inventory_items_search_url %>">
              <input name="keywords" type="text"></input>
              <button type="submit" class="btn">Search</button>
            </form>
          </li>
          <li class="pull-right">
            <a id ="CartButton" href= "<%= cart_index_path %>" >
            <i class="icon-shopping-cart"></i>
            <span id="CartCount" class="badge badge-info pull-right" style="margin-left:10px;"><%= current_cart.cart_items.count %></span>
            Shopping Cart
            </a>
          </li>
        </ul>
      </div>
    </header>
  <div id="Loading" class="row-fluid">
    <div class="span6"></div>
    <div>
      <img src="<%= image_path("ajax-loader.gif") %>" alt="loading..."/>
    </div>
  </div>
    <div class="row-fluid">
      <div id="MainContent" class="span-12">
        <%= content_for?(:MainContent) ? yield(:MainContent) : yield %>
      </div>
    </div>
  </div>
<script>
  $('.dropdown-toggle').dropdown();
</script>
</body>
</html>
