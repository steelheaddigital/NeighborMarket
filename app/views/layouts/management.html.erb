<%content_for :MainContent do %>
<div class="container-fluid">
  <div class="subnav">
    <ul class="nav nav-pills">
      <li class="active"><%= link_to "Site Settings", edit_site_setting_index_path, {:class => "mgmtNav"} %></li>
      <li><%= link_to "Order Cycle Settings", edit_order_cycle_index_path, {:class => "mgmtNav"} %></li>
      <li><%= link_to "User Search", user_search_management_index_path, {:class => "mgmtNav"} %></li>
      <li><%= link_to "Approve Sellers", approve_sellers_management_index_path, {:class => "mgmtNav"} %></li>
      <li><%= link_to "Manage Categories", categories_management_index_path, {:class => "mgmtNav"} %></li>
      <li class="dropdown" id="MainCategoriesMenu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Reports
          <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Inbound Delivery Log", inbound_delivery_log_management_index_path, {:class => "mgmtNav"} %></li>
            <li><%= link_to "Outbound Delivery Log", outbound_delivery_log_management_index_path, {:class => "mgmtNav"} %></li>
            <li><%= link_to "Buyer Invoices", buyer_invoices_management_index_path, {:class => "mgmtNav"} %></li>
          </ul>
      </li>
      <li></li>
    </ul>
