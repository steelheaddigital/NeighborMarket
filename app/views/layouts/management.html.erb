    <div class="row-fluid">
      <div id="ManagementLoading" style="display:none">
        <div class="span6"></div>
        <div>
          <img src="<%= image_path("ajax-loader.gif") %>" alt="loading..."/>
        </div>
      </div>
      <div id="ManagementNotice" class="alert fixed-alert">
      </div>
      <p id="" class="notice">
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </p>
    </div>
  </div>
  <div id="ManagementContent" class="container-fluid">
    <%= content_for?(:MainManagementContent) ? yield(:MainManagementContent) : yield %>
  </div>
</div>
<div id="Modal" class="modal hide fade">
</div>
<script>
  $("#Modal").modal({show:false});
</script>
