<table class="table table-bordered table-condensed">
  <thead>
    <tr>
		<th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <%@users.each do |user|%>
      <tr>
		<td><%= user.username%></td>
        <td><%= user.first_name%></td>
        <td><%= user.last_name%></td>
        <td><%= user.address%></td>
        <td><%= button_to "Show Details and Edit", { :action => "edit", :controller => "user", :id => user.id}, {:form => {:class => "editUsersButton"}, :method => "get", :class => "btn", :style => "width: 100%;"} %></td>
      </tr>
    <%end%>
  </tbody>
</table>

