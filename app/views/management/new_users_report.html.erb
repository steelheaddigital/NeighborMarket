<%= form_tag new_users_report_management_index_path, :method => "GET", :class => "well" do %> 
	<%=render 'report_dates'%>
<% end %>
<h4>Showing new users created between <%=format_short_date(@start_date)%> and <%=format_short_date(@end_date)%></h4>
<div class="table-responsive">
	<table class="table table-bordered table-condensed">
	  <thead>
	    <tr>
	        <th>Name</th>
	        <th>Create Date</th>
			<th>Roles</th>
			<th>Confirmed?</th>
			<th>Confirmation Date</th>
			<th></th>
			<th></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @users.each do |user| %>
	      <tr>
	        <td><%= "#{user.username}" %></td>
			<td><%= format_short_date(user.created_at) %></td>
			<td><%= user.roles.map(&:name).join(",") %>
			<td><%= user.confirmed? %>
			<td><%= format_short_date(user.confirmed_at) %>
	        <td><%= button_to "Show Details and Edit", { :action => "edit", :controller => "user", :id => user.id}, {:form => {:class => "editUsersButton"}, :method => "get", :class => "btn btn-default", :style => "width: 100%;"} %></td>
			<td><%= button_to "Delete User", { :action => "destroy", :controller => "user", :id => user.id}, {:data => {:confirm => 'Are you sure you want to delete this user?'}, :method => :delete, :class => "btn btn-danger", :style => "width: 100%;"} %></td>
	      </tr>
	    <%end%>
	  </tbody>
	</table>
</div>

