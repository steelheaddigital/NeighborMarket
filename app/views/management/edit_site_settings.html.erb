<%=button_to "Send Test Email", { :action => "test_email" }, { :class => "btn"} %>
<%= form_for @site_settings, :url => update_site_settings_management_index_path, :method => :post, :html => { :id => "SiteSettingsForm", :class=>"well" } do |f| %>
  <%= f.error_messages %>
  <div class="row-fluid">
	  <div class="span6">
		  <div>
		    <%= f.label :time_zone %>
		    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, { :default => "Pacific Time (US & Canada)" }, { :class => "input-xlarge" } %>
		  </div>
		  <div>
		    <label>Site name (Displayed on front page and in emails.)</label>
		    <%= f.text_field :site_name, :class => "input-xlarge" %>
		  </div>
		  <div>
		    <label>Site description (Displayed on front page. HTML is allowed.)</label>
		    <%= f.text_area :site_description, :rows => 5, :class => "input-xlarge"%>
		  </div>
		  <div>
		    <label>Inventory guidelines (Displayed on seller inventory form.)</label>
		    <%= f.text_area :inventory_guidelines, :rows => 5, :class => "input-xlarge"%>
		  </div>
		  <div>
			  <%= f.check_box(:require_terms_of_service, {:style => "margin: 0;"}, true, "false")%>
			  <span>Require terms of service agreement at user sign-up</span>
		  </div>
		  <div>
			<%= f.label :terms_of_service %>
		  	<%= f.text_area :terms_of_service, :rows => 10, :class => "input-xlarge"%>
		  </div>
	  </div>
	  <div class="span6">
		  <div>
		    <%= f.label :drop_point_address %>
		    <%= f.text_field :drop_point_address, :class => "input-xlarge" %>
		  </div>
		  <div>
		    <%= f.label :drop_point_city %>
		    <%= f.text_field :drop_point_city, :class => "input-xlarge" %>
		  </div>
		  <div>
		    <%= f.label :drop_point_state %>
		    <%= f.subregion_select :drop_point_state, Carmen::Country.coded('US'), {:class => "input-medium"}  %>
		  </div>
		  <div>
		    <%= f.label :drop_point_zip %>
		    <%= f.text_field :drop_point_zip, :class => "input-medium" %>
		  </div>
		  <div>
		    <%= f.label "Drop point directions" %>
		    <%= f.text_area :directions, :rows => 5, :class => "input-xlarge"%>
		  </div>
		  <fieldset>
			  <legend>Site Modes</legend>
			  Drop Point: <%= f.check_box(:drop_point, {:style => "margin: 0;"}, true, "false")%> </br>
			  Delivery: <%= f.check_box(:delivery, {:style => "margin: 0;"}, true, "false")%> </br>
		  </fieldset>
		  <fieldset>
			  <legend>Facebook Settings</legend>
			  Enable Facebook Sharing: <%= f.check_box(:facebook_enabled, {:style => "margin: 0;"}, true, "false")%> </br>
			  <label>Facebook App ID</label>
			  <%= f.text_field :facebook_app_id%> </br>
		  </fieldset>
	  </div>
  </div>
  <div class="row-fluid">
    <%= submit_tag "Save Settings", :class => 'btn btn-primary' %>
  </div>
<%end%>
