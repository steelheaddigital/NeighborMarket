<%= form_for @order_cycle, :url => management_update_order_cycle_path, :html => { :id => "OrderCycleSettingsForm" } do |f| %>
  <%= f.error_messages %>
  <%= error_messages_for @order_cycle_settings %>
  <div>
    <%= f.label :start_date %>
    <%= f.date_select :start_date, {:order => [:month, :day, :year], :include => :blank}, {:class => "input-small"} %>
  </div>
  <div>
    <%= f.label :end_date %>
    <%= f.date_select :end_date, {:order => [:month, :day, :year], :include => :blank}, {:class => "input-small"} %>
  </div>
  <%= fields_for @order_cycle_settings do |s|%>
    <div id="Recurring">
      <%= s.label "Recurring?" %>
      <%= s.check_box :recurring,{},"true","false" %>
    </div>
    <div>
      <%= s.label "Recurring Interval" %>
      <%= s.select(:interval, {"day" => "day","week" => "week", "month" => "month"}, {:include_blank => 'Please Select'}, :class => "input-medium") %>
    </div>
  <% end %>
  <div class="row-fluid">
    <%= submit_tag "Save Settings", :class => 'btn btn-primary' %>
  </div>
<%end%>
