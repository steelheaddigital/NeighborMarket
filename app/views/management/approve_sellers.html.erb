<div class="row-fluid">
  <div class="span10">
    <h3>Sellers awaiting approval</h3>
    <p class="notice"><%= flash[:notice] %></p>
    <%= flash[:alert] %>
    <table class="table table-bordered table-condensed">
      <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Details and Approval</th>
        </tr>
      </thead>
      <tbody>
        <%@sellers.each do |seller|%>
          <%role = Role.find_by_rolable_id_and_rolable_type(seller.id,"Seller") %>
          <tr>
            <td><%=role.user.first_name%></td>
            <td><%=role.user.last_name%></td>
            <td><%=role.user.address%></td>
            <td><%=link_to "Show Details and Approve", edit_user_path(role.user.id)%>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>