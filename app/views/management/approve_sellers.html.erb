<div id ="ApproveSellers">
    <h4>Sellers awaiting approval</h4>
    <p class="notice"><%= flash[:notice] %></p>
    <%= flash[:alert] %>
    <table class="table table-bordered table-condensed">
      <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Details and Approval</th>
        </tr>
      </thead>
      <tbody>
        <%@sellers.each do |seller|%>
          <tr>
            <td><%=seller.first_name%></td>
            <td><%=seller.last_name%></td>
            <td><%=seller.address%></td>
            <td><%= button_to "Show Details and Edit", { :action => "edit", :controller => "user", :id => seller.id}, {:form => {:class => "editUsersButton"}, :method => "get", :class => "btn", :style => "width: 100%;"} %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
</div>