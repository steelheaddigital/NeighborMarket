<div id ="ApproveSellers">
    <h4>Sellers awaiting approval</h4>
    <p class="notice"><%= flash[:notice] %></p>
    <%= flash[:alert] %>
	<div class="table-responsive">
	    <table class="table table-bordered table-condensed">
	      <thead>
	        <tr>
				<th>Username</th>
	            <th>First Name</th>
	            <th>Last Name</th>
	            <th>Address</th>
	            <th>Details and Approval</th>
				<th></th>
	        </tr>
	      </thead>
	      <tbody>
	        <%@sellers.each do |seller|%>
	          <tr>
				<td><%=seller.username%></td>
	            <td><%=seller.first_name%></td>
	            <td><%=seller.last_name%></td>
	            <td><%=seller.address%></td>
	            <td><%= link_to "Show Details and Edit", {:controller => "user", :action => "edit", :id => seller.id}, :class => "btn btn-default", :style => "width:100%;", :data => { dialog: true } %></td>
				<td><%= button_to "Delete User", { :action => "destroy", :controller => "user", :id => seller.id}, {:data => {:data => {:confirm => 'Are you sure you want to delete this user?'}}, :method => :delete, :class => "btn btn-danger", :style => "width: 100%;"} %></td>
	          </tr>
	        <%end%>
	      </tbody>
	    </table>
	</div>
</div>