<div id ="ApproveSellers" class="row-fluid">
  <div class="span6">
    <h3>Sellers awaiting approval</h3>
    <p class="notice"><%= flash[:notice] %></p>
    <%= flash[:alert] %>
    <table class="table table-bordered table-condensed">
      <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Details and Approval</th>
        </tr>
      </thead>
      <tbody>
        <%@sellers.each do |seller|%>
          <%role = Role.find_by_rolable_id_and_rolable_type(seller.id,"Seller") %>
          <tr>
            <td><%=role.user.first_name%></td>
            <td><%=role.user.last_name%></td>
            <td><%=role.user.address%></td>
            <td><%= button_to "Show Details and Edit", { :action => "edit", :controller => "users", :id => role.user.id}, {:form => {:class => "editUsersButton"}, :method => "get", :class => "btn", :style => "width: 100%;"} %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>