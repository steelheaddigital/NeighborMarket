<%= form_tag save_inbound_delivery_log_management_index_path, :method => "POST", :id => 'InboundDeliveryLogForm' do |f| %>
  <div class="row-fluid" style="margin-bottom: 15px;">
    <%= submit_tag "Save", :class => 'btn btn-primary' %>
    <%= link_to "Printable Delivery Log (PDF)", inbound_delivery_log_management_index_path(:format => 'pdf'), {:class => 'btn'} %>
  </div>
  <div class="well-fluid row-fluid">
    <div class="span12">
      <table class="table">
      <thead>  
        <tr>
          <th>Seller Name</th>
          <th>Buyer Name</th>
          <th>Item Name</th>
          <th>Quantity</th>
          <th>Delivered?</th>
        </tr>
      </thead>
        <tbody>
          <% @items.sort_by{|item| [item.inventory_item.user.last_name, item.inventory_item.user.first_name, item.order.user.last_name, item.order.user.first_name]}.each_with_index do |item, index| %>
          <tr>
            <td><%= item.inventory_item.user.last_name + ", " + item.inventory_item.user.first_name %> </td>
            <td><%= item.order.user.last_name + ", " + item.order.user.first_name %> </td>
            <td><%= item_name(item.inventory_item) %> </td>
            <td><%= "#{item.quantity}#{" "}#{item_quantity_label(item.inventory_item, item.quantity)}" %> </td>
            <td><%= check_box_tag "cart_items[" + index.to_s + "][delivered]", "true", item.delivered %></td>
            <%= hidden_field_tag "cart_items[" + index.to_s + "][id]", item.id %>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row-fluid">
    <%= submit_tag "Save", :class => 'btn btn-primary' %>
  </div>
<%end%>