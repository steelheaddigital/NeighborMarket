<table class="table table-bordered table-condensed">
  <thead>
    <tr>
  <th>Seller Name</th>
  <th>Item Name</th>
        <th>Top Level Category</th>
        <th>Second Level Category</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <%@inventory_items.sort_by{|item| [item.user.last_name, item.user.first_name, item.created_at]}.each do |item|%>
      <tr>
  <td><%= item.user.last_name + ", " + item.user.first_name %> </td>
  <td><%= item_name(item)%></td>
        <td><%= item.top_level_category.name%></td>
        <td><%= item.second_level_category.name%></td>
        <td><%= number_to_currency(item.price).to_s + " " + price_unit_label(item) %></td>
        <td><%= item.quantity_available%></td>
        <td><%= link_to "Edit", {:controller => "management", :action => "edit_inventory", :id => item.id}, :id => "mgmtEditInventoryItemButton", :class => "btn" %></td>
        <td><%= button_to "Delete", { :action => "destroy", :controller => "inventory_items", :id => item.id}, {:form => {:class => "mgmtDeleteInventoryItemButton"}, :confirm => "Are you sure you want to delete this item?", :method => "delete", :class => "btn btn-danger", :style => "width:95%;"} %></td>
      </tr>
    <%end%>
  </tbody>
</table>
<%= will_paginate @inventory_items %>

