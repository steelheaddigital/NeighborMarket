<div class="row-fluid">
  <div class="span6">
    <%= form_for @site_settings, :url => management_update_site_setting_path, :html => { :id => "SiteSettingsForm", :class=>"well" } do |f| %>
      <%= f.error_messages %>
      <div>
        <%= f.label "Domain (Example: http://mysite.com)" %>
        <%= f.text_field :domain %>
      </div>
      <div>
        <%= f.label :site_name %>
        <%= f.text_field :site_name %>
      </div>
      <div>
        <%= f.label :drop_point_address %>
        <%= f.text_field :drop_point_address %>
      </div>
      <div>
        <%= f.label :drop_point_city %>
        <%= f.text_field :drop_point_city %>
      </div>
      <div>
        <%= f.label :drop_point_state %>
        <%= f.state_select :drop_point_state %>
      </div>
      <div>
        <%= f.label :drop_point_zip %>
        <%= f.text_field :drop_point_zip %>
      </div>
      <div class="row-fluid">
        <%= submit_tag "Save Settings", :class => 'btn btn-primary' %>
      </div>
    <%end%>
  </div>
</div>